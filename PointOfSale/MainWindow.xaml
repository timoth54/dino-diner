<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="MainWindow">
    <Window.SizeToContent>Height</Window.SizeToContent>
    <DockPanel>
        <StackPanel DockPanel.Dock="Right">
            <Label Content="Current Order" HorizontalAlignment="Center" FontFamily="Times New Roman" FontSize="16"/>
            <ListBox  MinWidth="200" MinHeight="450" Background="SlateGray">// TODO: Order</ListBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="CancelButton" Content="Cancel" FontFamily="Times New Roman" FontSize="16" Margin="0,0,10,0"/>
                <Button x:Name="PayButton" Content="Pay" FontFamily="Times New Roman" FontSize="16"/>
            </StackPanel>
        </StackPanel>

        <Frame Source="MenuCategorySelection.xaml"></Frame>
    </DockPanel>
</Window>
